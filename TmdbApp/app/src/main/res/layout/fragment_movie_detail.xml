<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
<data>
    <variable
        name="movieDetail"
        type="com.example.tmdbapp.data.networking.models.response.MovieResults.Result" />
</data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.features.moviedetails.MovieDetailFragment"
        android:transitionName="shared_element_container">


        <ImageView
            android:id="@+id/expandedImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            app:layout_constraintTop_toBottomOf="@id/expandedImage"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text = "@{movieDetail.title}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
