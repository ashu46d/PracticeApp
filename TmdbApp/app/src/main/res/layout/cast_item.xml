<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>

        <variable
            name="cast"
            type="com.example.tmdbapp.data.networking.models.ActorDomainModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/cast_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/venom_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/rec_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{cast.name}"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@id/cast_image"
            app:layout_constraintStart_toStartOf="@id/cast_image"
            app:layout_constraintTop_toBottomOf="@id/cast_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>