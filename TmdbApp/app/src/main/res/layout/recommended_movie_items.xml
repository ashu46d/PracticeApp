<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>

    <variable
        name="movie"
        type="com.example.tmdbapp.data.networking.models.MovieDomainModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="20dp">

        <ImageView
            android:id="@+id/rec_poster_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/venom_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/rec_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.title}"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@id/rec_poster_img"
            app:layout_constraintStart_toStartOf="@id/rec_poster_img"
            app:layout_constraintTop_toBottomOf="@id/rec_poster_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>